# Configuração do Slack
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_TEAM_ID=T1234567890

# Configuração da OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# --- Zapier MCP API Keys (Required for each enabled integration) ---
# For each Zapier MCP, set the respective API key here (see README: Security section).
# ZAPIER_GOOGLE_DRIVE_API_KEY=your-google-drive-zapier-api-key
# ZAPIER_MCPEVERHOUR_API_KEY=your-mcpeverhour-zapier-api-key
# ZAPIER_MCPGMAIL_API_KEY=your-mcpgmail-zapier-api-key
# ZAPIER_MCPASANA_API_KEY=your-mcpasana-zapier-api-key
# ZAPIER_MCPGOOGLECALENDAR_API_KEY=your-mcpgooglecalendar-zapier-api-key
# ZAPIER_MCPGOOGLEDOCS_API_KEY=your-mcpgoogledocs-zapier-api-key
# ZAPIER_MCPGOOGLESHEETS_API_KEY=your-mcpgooglesheets-zapier-api-key
# ZAPIER_MCPSLACK_API_KEY=your-mcpslack-zapier-api-key

# Limite máximo de atendimentos simultâneos da Livia (para evitar limites de taxa/custos)
# Recomenda-se entre 3 e 10. Padrão = 5 se não informado.
LIVIA_MAX_CONCURRENCY=5

# Opcional: Limitar canais acessíveis para o servidor MCP
# SLACK_CHANNEL_IDS=C1234567890,C0987654321

# Opcional: Habilitar Saídas Estruturadas da OpenAI para adesão confiável ao esquema JSON
# Requer modelos gpt-4o-2024-08-06 ou posteriores. Padrão = false
LIVIA_USE_STRUCTURED_OUTPUTS=false

# Nota: A integração com Asana está habilitada por padrão com token fixo no código
